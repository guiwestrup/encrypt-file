extends layout

block content
    div(class="container pt-5 text-center")
        div(class="row text-center")
            h1 Crypto App

        hr
        div(class="row text-center")
            p(class="h3") Encriptografar

        div(class="row text-center")
            form(method="POST" action="/crypto")
                div(class="form-group")
                    label(for="fileName") Nome do Arquivo
                    input(
                        id="fileName"
                        name="fileName"
                        class="form-control"
                    )
                
                div(class="form-group")
                    label(for="message") Insira a mensagem que deseja criptografar
                    textarea(
                        id="message"
                        name="message"
                        rows="2"
                        cols="50"
                        class="form-control"
                    )
                       
                div(class="form-group")
                    button(class="btn btn-primary btn-sm" type="submit") Criptografar 
        
        hr
        div(class="row text-center")
            p(class="h3") Descriptografar
        
        div(class="row text-center")
            form(method="POST" action="/decrypto")
                div(class="form-group")
                    label(for="uploadFile") Selecione o Arquivo que deseja desincroptografar
                    input(
                        id="uploadFile"
                        type="file"
                        class="form-control"
                        name="uploadFile"
                        accept=".txt"
                    )
                    small(class="form-text text-muted") Apenas arquivos .txt e que j√° foram encriptografado
                div(class="form-group")
                    button(class="btn btn-primary btn-sm" type="submit") Descriptografar 
